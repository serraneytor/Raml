  first_name_method: "Jhon",
  last_name_method: "Salchicon",
  account_number_method: "*3210",
  routing_number_method: "021*"
}]]></ee:set-payload>
            </ee:message>
        </ee:transform>
    </flow>
    <flow name="post:\(MetodoPago)(ext):application\json:Spreedly-config">
        <ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core">
            <ee:variables>
                <ee:set-variable variableName="MetodoPago">attributes.uriParams.'MetodoPago'</ee:set-variable>
                <ee:set-variable variableName="ext">attributes.uriParams.'ext'</ee:set-variable>
            </ee:variables>
        </ee:transform>
        <ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
  transaction: {
    token: "423n5H8eFaWsuDFBljFXkJv5AvQ",
    created: "2020-05-21",
    updated: "2020-05-21",
    succeeded: true,
    state: "succeeded",
    payment_method: {
      token_method: "2wOYe6OvP3TzORVRbEqMpazMGrL",
      created_method: "2020-05-21",
      updated_method: "2020-05-21",
      full_name_method: "Jhon Salchicon",
      routing_number: "021*",
      account_number: "*3210"
    }
  }
}]]></ee:set-payload>
            </ee:message>
        </ee:transform>
    </flow>
    <flow name="post:\(Transaccion)\(transaction_token)\(ext):application\json:Spreedly-config">
        <ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core">
            <ee:variables>
                <ee:set-variable variableName="Transaccion">attributes.uriParams.'Transaccion'</ee:set-variable>
                <ee:set-variable variableName="transaction_token">attributes.uriParams.'transaction_token'</ee:set-variable>
                <ee:set-variable variableName="ext">attributes.uriParams.'ext'</ee:set-variable>
            </ee:variables>
        </ee:transform>
        <ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
  message: "Succeeded!",
  created: "2020-05-19",
  updated: "2020-05-19",
  token: "Kbi4Oit5lez58GlYv8r7pAD8bMA",
